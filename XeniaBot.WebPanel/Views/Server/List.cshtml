    @if (@Model.UserConfig.ListViewStyle == ListViewStyle.Grid)
    {
        <div class="d-flex flex-wrap"
             hx-get="/Server/Components/ServerList"
            hx-target="this"
            hx-swap="innerHTML"
            hx-trigger="load"
            hx-indicator=".htmx-indicator"
            id="serverListContainer">
        </div>
    } else
    {
        <table class="table table-bordered table-sm server-listing">
            <thead>
            <tr>
                <th>Name</th>
                <th>Members</th>
                <th></th>
            </tr>
            </thead>
            <tbody hx-get="/Server/Components/ServerList"
                  hx-target="this"
                  hx-swap="innerHTML"
                  hx-trigger="load"
                  hx-indicator=".htmx-indicator"
                  id="serverListContainer">
            </tbody>
