@model ServerDetailsViewModel

<form id="role_preserve"
      enctype="application/x-www-form-urlencoded"
      method="post"
      asp-controller="Server"
      asp-action="SaveSettings_WarnStrike"
      asp-route-id="@Model.Guild.Id">
    
    <div class="form-check mb-3">
        <input class="form-check-input" name="enable" type="checkbox" value="true" id="warn_strike_enable" checked="@Model.WarnStrikeConfig.EnableStrikeSystem" />
        <label class="form-check-label" for="warn_strike_enable">Enable</label>
    </div>
    <div class="form-group mb-3">
        <label for="warn_strike_max">Maximum Strike Count</label>
        <input aria-describedby="warn_strike_max_help" class="form-control" name="maxStrike" type="number" min="2" id="warn_strike_max" value="@Model.WarnStrikeConfig.MaxStrike" />
        <small id="warn_strike_max_help" class="form-text text-muted">Maximum amount of Warns before action should be taken.</small>
    </div>
    <div class="form-group mb-3">
        <label for="warn_strike_window">Strike Window (days)</label>
        <input aria-describedby="warn_strike_window_help" class="form-control" name="strikeWindow" type="number" min="2" id="warn_strike_window" value="@Model.WarnStrikeConfig.StrikeWindow" />
        <small id="warn_strike_window_help" class="form-text text-muted">Maximum age for a Warn to count as an Active Strike</small>
    </div>
    <input class="btn btn-success" type="submit" value="Save"/>
</form>