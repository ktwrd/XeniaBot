@{
    Layout = "_Layout";
}
@using XeniaBot.WebPanel.Helpers
@model WarnInfoViewModel
<style>
    .smallUserIcon {
        height: 32px;
        width: initial !important;
        border-radius: 50%;
    }
</style>

<div class="container">
    <h1 class="mb-0">Warn Details</h1>
    <sup>@Model.WarnItem.WarnId</sup>
    <p>
        <img src="@(Model.Client.GetUser(Model.WarnItem.TargetUserId).GetAvatarUrl() ?? Model.Client.GetUser(Model.WarnItem.TargetUserId).GetDefaultAvatarUrl())" class="smallUserIcon" /> <code alt="@Model.WarnItem.TargetUserId">@Model.Client.GetUser(Model.WarnItem.TargetUserId).ToString()</code>
        was warned by
        <img src="@(Model.Client.GetUser(Model.WarnItem.ActionedUserId).GetAvatarUrl() ?? Model.Client.GetUser(Model.WarnItem.ActionedUserId).GetDefaultAvatarUrl())" class="smallUserIcon" /> <code alt="@Model.WarnItem.ActionedUserId">@Model.Client.GetUser(Model.WarnItem.ActionedUserId).ToString()</code>
        at
        <code>@(AspHelper.DateTimeFromTimestamp(Model.WarnItem.CreatedAtTimestamp).ToString("yyyy/MM/dd HH:mm:ss tt"))</code>
        in
        <a asp-controller="Server" asp-route-id="@Model.Guild.Id" asp-action="Index"><code>@Model.Guild.Name</code></a>
    </p>
    <h4>Description</h4>
    <textarea class="form-control" readonly>@Model.WarnItem.Description</textarea>
    <a class="btn btn-outline-primary btn-sm mt-3" asp-controller="WarnSystem" asp-action="GuildWarns" asp-route-id="@Model.Guild.Id">Go Back</a>
</div>

