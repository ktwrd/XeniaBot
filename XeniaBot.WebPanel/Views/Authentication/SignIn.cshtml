@using Microsoft.AspNetCore.Authentication
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Microsoft.AspNetCore.Authentication.AuthenticationScheme[]

<h1>Authentication</h1>
<p class="lead text-left">Sign in using one of these external providers:</p>

@foreach (var scheme in Model!.OrderBy(p => p.DisplayName))
{
    <form action="/signin" method="post">
        <input type="hidden" name="Provider" value="@scheme.Name" />
        <input type="hidden" name="ReturnUrl" value="@ViewBag.ReturnUrl" />

        <button class="btn btn-lg btn-success m-1" type="submit">Connect using @scheme.DisplayName</button>
    </form>
}
<p style="font-weight: bold" class="mt-3">
    By using the Xenia Dashboard, you're agreeing to; <a asp-controller="Home" asp-action="Privacy">our privacy policy</a>, <a href="https://discord.com/privacy">Discord's privacy policy</a>, and <a href="https://discord.com/terms">Discord's Terms of Service</a>.
</p>
