@using XeniaBot.WebPanel.Helpers
<!DOCTYPE html>
<html lang="en">
<head>
    <base href="/" />
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Xenia Dashboard</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-grid.min.css"/>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-reboot.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css"/>
    <link rel="stylesheet" href="~/XeniaBot.WebPanel.styles.css" asp-append-version="true"/>
</head>
<body>
<header>
    @await Component.InvokeAsync("Navbar")
</header>
<div class="container">
    <main role="main" class="pb-3">
        @if (@Model != null)
        {
            if (typeof(BaseViewModel).IsAssignableFrom(@Model.GetType()) || @Model.GetType() == typeof(BaseViewModel))
            {
                if (@Model.Message != null)
                {
                    <div class="alert alert-@Model.MessageType mt-3" role="alert">
                        @Model.Message
                    </div>
                }
            }
        }
        @RenderBody()
    </main>
</div>
<footer class="border-top footer text-muted mt-4">
    <div class="container mt-3">
        &copy; 2023 - Xenia Bot & Dashboard Contributors - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a><br/>
        <hr/>
        <code>Xenia Dashboard @(Program.VersionFull)</code>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
<script src="~/_framework/blazor.server.js"></script>
</body>
</html>