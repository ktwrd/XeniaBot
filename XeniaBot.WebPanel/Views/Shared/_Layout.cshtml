@using XeniaBot.WebPanel.Helpers
<!DOCTYPE html>
<html lang="en">
<head>
    <base href="/" />
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Xenia Dashboard</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-grid.min.css"/>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-reboot.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css"/>
    <link rel="stylesheet" href="~/lib/jquery-datatables/datatables.min.css" />
    <link rel="stylesheet" href="~/lib/select2/css/select2.min.css"/>
    @* <link rel="stylesheet" href="~/lib/jquery-ui/jquery-ui.min.css" /> *@
    <script src="~/lib/htmx.min.js" type="text/javascript"></script>
</head>
<body>
<header>
    @await Component.InvokeAsync("Navbar")
</header>
<div class="container">
    <main role="main" class="pb-3">
        @if (@Model != null)
        {
            if (typeof(BaseViewModel).IsAssignableFrom(@Model.GetType()) || @Model.GetType() == typeof(BaseViewModel))
            {
                if (@Model.Message != null)
                {
                    <div class="alert alert-@Model.MessageType mt-3" role="alert">
                        @Model.Message
                    </div>
                }
            }
        }
        @RenderBody()
    </main>
</div>
<footer class="border-top footer text-muted mt-4">
    <div class="container mt-3">
        &copy; 2023 - @DateTime.Now.Year - Xenia Bot & Dashboard Contributors - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a> - <a href="https://xenia.kate.pet">Website</a><br/>
        <hr/>
        @{
            var versionString = Program.Version?.ToString();
            if (versionString != null)
            {
                while (versionString.EndsWith(".0"))
                    versionString = versionString[..^2];
                if (!string.IsNullOrEmpty(versionString))
                {
                    versionString = $"v{versionString}";
                }
            }
        }
        <code>Xenia Dashboard @versionString</code>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
@* <script src="~/lib/jquery-ui/jquery-ui.min.js"></script> *@
<script src="~/lib/jquery-datatables/datatables.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/lib/select2/js/select2.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
@* <script src="~/_framework/blazor.server.js"></script> *@
</body>
</html>